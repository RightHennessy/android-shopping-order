<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/skeleton_outer"
    android:paddingHorizontal="13dp"
    android:paddingVertical="18dp">

    <View
        android:id="@+id/skeleton_cart_product_list_title"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:id="@+id/skeleton_cart_product_list_picture"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginTop="13dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeleton_cart_product_list_title" />

    <View
        android:id="@+id/skeleton_cart_product_list_content_1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeleton_cart_product_list_picture"
        app:layout_constraintTop_toTopOf="@id/skeleton_cart_product_list_picture" />

    <View
        android:id="@+id/skeleton_cart_product_list_content_2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintBottom_toTopOf="@id/skeleton_cart_product_list_content_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeleton_cart_product_list_picture"
        app:layout_constraintTop_toBottomOf="@id/skeleton_cart_product_list_content_1" />

    <View
        android:id="@+id/skeleton_cart_product_list_content_3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_cart_product_list_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeleton_cart_product_list_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>