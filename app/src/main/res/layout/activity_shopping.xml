<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shopping.ShoppingActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/shopping_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_shopping"
            app:titleTextColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopping_product_list"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:stretchColumns="*"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopping_toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/skeleton_shopping_product_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopping_toolbar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:paddingTop="10dp">

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"/>

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"/>

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintTop_toBottomOf="@id/skeleton_0"
                android:layout_marginStart="14dp"/>

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/skeleton_2"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"/>

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintTop_toBottomOf="@id/skeleton_2"
                android:layout_marginStart="14dp"/>

            <include
                layout="@layout/item_product_list_skeleton"
                android:id="@+id/skeleton_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/skeleton_4"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
