<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.model.uimodel.ProductUIModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.shoppingmain.ShoppingMainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_product_catalogue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background_main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/tool_bar_product_catalogue"
            app:title="Shopping"
            app:titleTextColor="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/skeleton_shopping_product_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_product_catalogue"
            app:layout_constraintVertical_bias="0.0">

            <include
                android:id="@+id/skeleton_0"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/skeleton_1"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/skeleton_2"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skeleton_0" />

            <include
                android:id="@+id/skeleton_3"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintTop_toTopOf="@id/skeleton_2" />

            <include
                android:id="@+id/skeleton_4"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintEnd_toStartOf="@id/skeleton_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skeleton_2" />

            <include
                android:id="@+id/skeleton_5"
                layout="@layout/item_product_skeleton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/skeleton_0"
                app:layout_constraintTop_toTopOf="@id/skeleton_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_catalogue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_load_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_product_catalogue"
            app:spanCount="2" />

        <Button
            android:id="@+id/btn_load_more"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/item_load_more_back_ground"
            android:text="@string/load_more"
            android:textColor="@color/black"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_product_catalogue" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
