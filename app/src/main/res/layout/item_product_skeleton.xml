<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    android:paddingVertical="10dp">

    <View
        android:id="@+id/skeleton_product_list_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/skeleton_product_list_title"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="14dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintEnd_toEndOf="@id/skeleton_product_list_picture"
        app:layout_constraintStart_toStartOf="@id/skeleton_product_list_picture"
        app:layout_constraintTop_toBottomOf="@id/skeleton_product_list_picture" />

    <View
        android:id="@+id/skeleton_product_list_price"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="36dp"
        android:background="@color/skeleton_inner"
        app:layout_constraintEnd_toEndOf="@id/skeleton_product_list_picture"
        app:layout_constraintStart_toStartOf="@id/skeleton_product_list_picture"
        app:layout_constraintTop_toBottomOf="@id/skeleton_product_list_title" />

</androidx.constraintlayout.widget.ConstraintLayout>