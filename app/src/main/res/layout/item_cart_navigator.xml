<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="153dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart_navigator_previous_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cart_navigator_page_text"
            android:text="@string/pagination_previous_button"
            android:background="@drawable/previous_button_background"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cart_navigator_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            app:layout_constraintTop_toTopOf="@id/cart_navigator_previous_button"
            app:layout_constraintBottom_toBottomOf="@id/cart_navigator_previous_button"
            app:layout_constraintStart_toEndOf="@id/cart_navigator_previous_button"
            app:layout_constraintEnd_toStartOf="@id/cart_navigator_next_button"
            android:layout_marginHorizontal="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart_navigator_next_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cart_navigator_page_text"
            android:text="@string/pagination_next_button"
            android:background="@drawable/next_button_background"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
